<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rtsr.eskapprovals">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/esk"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/esk"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AddAllowanceActivity"
            android:exported="false" />
        <activity
            android:name=".NonZeroOrderListActivity"
            android:exported="false" />
        <activity
            android:name=".EditAllowanceActivity"
            android:exported="false" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/settings_name" />
        <activity
            android:name=".ConversionTo1TypeActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ShipmentAllowanceActivity"
            android:configChanges="orientation|screenSize" />
    </application>

</manifest>